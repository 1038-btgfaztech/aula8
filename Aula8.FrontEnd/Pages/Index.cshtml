@page
@model IndexModel
@{
    ViewData["Title"] = "Login Page";
}


<h1 class="display-4 text-center">Login Page</h1>

<div class="row justify-content-center">
    <div class="col-auto">
        <table class="table table-responsive">
            <tr><td><label for="username">Username:</label></td><td><input type="text" id="username" name="username" value="username"></td></tr>
            <tr><td><label for="password">Password:</label></td><td><input type="password" id="password" name="password" value="password"></td></tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="button" id="login">Login</button>
                    <button type="button" id="logout">Logout</button>
                    <button type="button" id="showData">Exibir Dados</button>
                </td>
            </tr>
        </table>
    </div>

    <div id="responseStatusLabel" class="text-center"></div>
    <table id="responseData" class="table table-striped"></table>

</div>